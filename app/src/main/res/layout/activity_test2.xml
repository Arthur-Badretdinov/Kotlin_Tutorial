<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testActivity2">

    <TextView
        android:id="@+id/tvTest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:text="Введите имя ученика:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTest1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Напишите имя"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tvTest1"
        app:layout_constraintStart_toStartOf="@+id/tvTest1"
        app:layout_constraintTop_toBottomOf="@+id/tvTest1" />

    <Button
        android:id="@+id/bTest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Узнать оценку"
        app:layout_constraintEnd_toEndOf="@+id/edTest1"
        app:layout_constraintStart_toStartOf="@+id/edTest1"
        app:layout_constraintTop_toBottomOf="@+id/edTest1" />

    <TextView
        android:id="@+id/tvTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/bTest1"
        app:layout_constraintStart_toStartOf="@+id/bTest1"
        app:layout_constraintTop_toBottomOf="@+id/bTest1" />
</androidx.constraintlayout.widget.ConstraintLayout>